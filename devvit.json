{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "picture-police",
  "blocks": {
    "entry": "src/main.ts",
    "triggers": ["onPostCreate", "onAppInstall", "onAppUpgrade"]
  },
  "permissions": {
    "reddit": {
      "enable": true
    },
    "http": {
      "enable": true,
      "domains": [
        "reddit.com",
        "redd.it",
        "vision.googleapis.com",
        "facebook.com",
        "instagram.com",
        "pinterest.com"
      ]
    },
    "redis": true
  }
}